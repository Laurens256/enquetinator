{{#each formFields}}

	{{#if (eq @key 'subject')}}
		<label class="readonly">{{this.label}}
			<input 
				type="{{this.type}}"
				name="{{@key}}"
				value="{{this.value}}"
				{{#this.readonly}}readonly{{/this.readonly}}
			/>
		</label>

	{{else if (eq this.type 'radio')}}
		<section class="radiosection">
			<h2>{{{this.label}}}</h2>
			<div>
			{{#each this.options}}
				<input 
					type="{{../this.type}}"
					name="{{@../key}}"
					id="{{this.id}}"
					value="{{this.value}}"
					{{#this.checked}}checked{{/this.checked}}
					{{#../this.required}}required{{/../this.required}}
				/>
				<label for="{{this.id}}" class="{{spreadAttributes ../this.classes}}">{{this.label}}</label>
			{{/each}}
			</div>
		</section>

	{{else if (eq this.type 'submit')}}
		<section class="submitsection">
			{{#if this.resetable}}
				{{!-- <input 
					type="reset"
					value="Velden legen"
					class="{{spreadAttributes this.classes}}"
				/> --}}
				<button type="reset" class="{{spreadAttributes this.classes}}">Velden legen

				</button>
			{{/if}}
			{{!-- <input 
				type="{{this.type}}"
				value="{{this.value}}"
				class="{{spreadAttributes this.classes}}"
			/> --}}
			<button type="{{this.type}}" class="{{spreadAttributes this.classes}}">{{this.value}}</button>
		</section>

		{{else}}
			<div class="inputlabel">
				<label for="{{this.name}}">{{this.label}}</label>{{#if (ne '' this.error)}}<p>* {{this.error}}</p>{{/if}}
			</div>

		<input 
			type="{{this.type}}"
			name="{{@key}}"
			id="{{@key}}"
			value="{{this.value}}"
			autocomplete="{{this.autocomplete}}"
			data-error-msg="{{this.error}}"
			{{#this.required}}required{{/this.required}}
		/>

	{{/if}}

{{/each}}